{
  "name": "@auth0/auth0-mcp-server",
  "version": "0.1.0-beta.1",
  "description": "Auth0 MCP Server for Claude Desktop",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "auth0-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "postbuild": "shx chmod +x dist/*.js",
    "start": "node dist/index.js run",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "local-setup": "node utils/local-setup.js",
    "debug-server": "DEBUG=auth0-mcp node dist/index.js run",
    "format": "prettier --write \"**/*.{js,ts,json}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json}\"",
    "generate-notice": "node utils/generate-notice.js"
  },
  "keywords": [
    "auth0",
    "mcp",
    "claude"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "chalk": "^5.4.1",
    "debug": "^4.4.0",
    "jwt-decode": "^4.0.0",
    "keytar": "^7.9.0",
    "node-fetch": "^3.3.2",
    "which": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.13.14",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.0.0",
    "msw": "^2.2.0",
    "prettier": "^3.5.2",
    "shx": "^0.4.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.29.0",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
